# ==== Database / Redis ====
DATABASE_URL=postgresql+asyncpg://app:app@localhost:5432/helpdesk
REDIS_URL=redis://redis:6379/0

# ==== JWT ====
JWT_SECRET=supersecret
JWT_ALG=HS256
JWT_EXPIRES_MIN=60

# ==== CORS Origins ====
# Варіант 1: через кому
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:8080,http://127.0.0.1:8080
# Варіант 2: JSON-список (оберіть один варіант і лишіть його)
# CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173","http://localhost:8080","http://127.0.0.1:8080"]

# ==== Signup policy ====
ALLOW_SELF_SIGNUP=true

# ==== Bootstrap Admin / Demo ====
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!
ADMIN_NAME=Admin
CREATE_DEMO_OPERATOR=true
CREATE_DEMO_USER=true

# ==== UI (опційно) ====
# Якщо хочеш віддавати SPA з іншої директорії:
# UI_DIST_DIR=/abs/path/to/front/dist

# ==== Misc ====
ENV=dev
LOG_LEVEL=INFO

# Фронтовий URL для локальної збірки (не читається бекендом, а лишається тут для зручності)
VITE_API_URL=http://localhost:8000

# Postgres (compose підставить дефолти, але краще явно)
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=helpdesk

# App
DATABASE_URL=postgresql+asyncpg://app:app@db:5432/helpdesk
REDIS_URL=redis://redis:6379/0
APP_ENV=production

# CORS (якщо в main читаєш)
CORS_ORIGINS=http://localhost:5173